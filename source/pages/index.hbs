---
layout: default.hbs
---

<div class="page--index landing h-card">
    <div class="landing__wrapper">
        <div class="landing__logo landing__section">
            <div class="landing__logo-wrapper">
                <img class="landing__logo-image" alt="{{ config.site_title }}" src="/assets/images/avatar.svg">
            </div>
        </div>

        <div class="landing__header landing__section">
            <h1 class="landing__heading landing__heading--large p-name">{{ config.site_title }}</h1>
            <h2 class="landing__heading landing__heading--small">{{ config.site_description }}</h2>
        </div>

        <div class="landing__footer landing__section">
            <ul class="button-group button-group--horizontal">
                {{#each nav}}
                {{#unless logo}}
                <li class="button-group__item">
                    <a href="{{url}}" class="button{{#if colour}} button--{{colour}}{{/if}}">{{title}}</a>
                </li>
                {{/unless}}
                {{/each}}
            </ul>

            <ul class="button-group button-group--horizontal">
                {{#each elsewhere}}
                {{#unless disabled}}
                <li class="button-group__item">
                    <a href="{{ url }}?utm_source=mylesb.ca&utm_medium=button&utm_campaign=referral"{{#if description}} title="{{ trim description }}"{{/if}}{{#if rel }} rel="{{ rel }}"{{/if}} class="button{{#if colour}} button--{{colour}}{{/if}}">
                        {{ title }}
                    </a>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
